@model IEnumerable<_2184587.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Producto Compra</h2>

<p>
    @Html.ActionLink("Crear Producto compras", "Create")
</p>
<table class="table">
    <tr>
        <th>
    ID Compra
        </th>
        <th>
         ID Producto
        </th>
        <th>
         Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_compra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" }))
            </td>
        </tr>
    }

</table>

@section scripts
    {
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}

